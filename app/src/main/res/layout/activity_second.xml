<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".second"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/adamina"
            android:text="What would u like \n to order today"
            android:textColor="#070707"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginTop="-60dp"
            android:layout_marginEnd="35dp"
            android:src="@drawable/r" />

            <androidx.cardview.widget.CardView
                android:layout_width="340dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:backgroundTint="#FAFFB6C1"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="170dp"
                        android:layout_height="140dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="14dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/xo" />

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="-120dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/adamina"
                        android:text="free delivey"
                        android:textColor="#050505"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="20dp"
                        android:fontFamily="@font/adamina"
                        android:text="Dec10-Dec11"
                        android:textColor="#B9054707"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="13dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/bg"
                        android:id="@+id/btn"
                        android:fontFamily="@font/adamina"
                        android:text="order now"
                        android:textStyle="bold" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/adamina"
            android:text="popular"
            android:textColor="#050505"
            android:textSize="20sp" />

        <TextView
            android:layout_width="63dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="-50dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/adamina"
            android:text="viewall"
            android:textColor="#E89B29"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ca"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="#fff"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/co" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/adamina"
                        android:text="salmon sushi"
                        android:textColor="#050505"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/adamina"

                        android:text="$8.50"
                        android:textColor="#050505" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="-26dp"
                        android:layout_marginEnd="35dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/star" />

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="-18dp"
                        android:layout_marginEnd="7dp"
                        android:fontFamily="@font/adamina"
                        android:text="4.0"
                        android:textColor="#6C6A6A"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="-200dp"
                android:backgroundTint="#fff"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/cu" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/adamina"
                        android:text="sushi rolls"
                        android:textColor="#050505"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/adamina"

                        android:text="$9.50"
                        android:textColor="#050505" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="-26dp"
                        android:layout_marginEnd="35dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/star" />

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_marginTop="-18dp"
                        android:layout_marginEnd="7dp"
                        android:fontFamily="@font/adamina"
                        android:text="4.0"
                        android:textColor="#6C6A6A"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/adamina"
            android:text="Recommended"
            android:textColor="#0B0B0B"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginStart="25dp"
            android:layout_marginTop="-30dp"
            android:fontFamily="@font/adamina"
            android:text="viewall"
            android:textColor="#E89B29"
            android:textSize="17sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#fff"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bbb" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="-130dp"
                    android:text="California rools"
                    android:textSize="13dp"
                    android:textColor="#090909"
                    android:fontFamily="@font/adamina"
                    android:layout_marginEnd="10dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="16dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="90dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/star"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="-15dp"
                    android:textSize="12sp"
                    android:text="4.0 reviews"
                    android:fontFamily="@font/adamina"
                    android:textStyle="bold"
                    android:textColor="#716C6C"
                    android:layout_marginEnd="10dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="16dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="90dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/calories"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="-15dp"
                    android:textSize="12sp"
                    android:text="low calories"
                    android:fontFamily="@font/adamina"
                    android:textStyle="bold"
                    android:textColor="#716C6C"
                    android:layout_marginEnd="10dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="90dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/shipping"
                    android:scaleType="fitXY"
                    />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"

                    android:layout_gravity="right"
                    android:layout_marginTop="-17dp"
                    android:textSize="12sp"
                    android:text="20 minutes"
                    android:fontFamily="@font/adamina"
                    android:textStyle="bold"
                    android:textColor="#716C6C"
                    android:layout_marginEnd="10dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</ScrollView>