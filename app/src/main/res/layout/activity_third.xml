<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".third"
    android:background="#fff"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >
<LinearLayout
    android:layout_width="390dp"
    android:layout_height="50dp"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back"
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#fff"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_arrow_back_24"
        />
    <ImageView
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_gravity="right"
        android:layout_marginTop="-25dp"
        android:src="@drawable/car"
        android:layout_marginEnd="30dp"
        android:scaleType="fitXY"/>
</LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="30dp"
            android:elevation="10dp"
            android:backgroundTint="#fff">
            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="280dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/sus"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/minus"
                    android:scaleType="fitXY"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#F6980E"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="1"
                    android:layout_gravity="center"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="-20dp"
                    android:fontFamily="@font/adamina"
                    android:textColor="#070707"/>
                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="-18dp"
                    android:src="@drawable/plus"
                    android:scaleType="fitXY"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:text="Salmon sushi"
            android:textColor="#0B0B0B"
            android:textSize="20sp"
            android:fontFamily="@font/adamina"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="-29dp"
            android:layout_marginEnd="20dp"
            android:text="$8.10"
            android:layout_gravity="right"
            android:textColor="#0B0B0B"
            android:textSize="15sp"
            android:fontFamily="@font/adamina"/>
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="110dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                app:cardElevation="5dp"
                android:backgroundTint="#fff">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:src="@drawable/avco"
                    android:scaleType="fitXY"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:text="Avacado"
                    android:textColor="#6C6868"
                    android:textSize="12sp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/adamina"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="10dp"
                app:cardElevation="5dp"
                android:backgroundTint="#fff"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:src="@drawable/rice"
                    android:scaleType="fitXY"/>
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:text="rice"
                    android:textColor="#777575"
                    android:textSize="12sp"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/adamina"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="#fff"
                app:cardElevation="5dp"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:src="@drawable/sal"
                    android:scaleType="fitXY"/>
                <TextView
                    android:layout_width="45dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:text="Salmon"
                    android:textColor="#777575"
                    android:textSize="12sp"
                    android:layout_marginStart="17dp"
                    android:fontFamily="@font/adamina"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:cardElevation="5dp"
                android:backgroundTint="#fff">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/carrot"/>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:text="carrot"
                    android:textColor="#777575"
                    android:textSize="12sp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/adamina"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
<TextView
    android:layout_width="80dp"
    android:layout_height="30dp"
    android:text="Details"
    android:textColor="#070707"
    android:textSize="20sp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="20dp"
    android:fontFamily="@font/adamina"/>
        <TextView
            android:layout_width="340dp"
            android:layout_height="120dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"

            android:text="A salmon rool is a morden sushi with A \n Salmon .This is a spicy inside out sushi\n Rool with salmon fish ,inside spicy mayo\n,rice,carrot,avacodo and swetness...... more"
            android:textColor="#FA6C6A6A"
            android:textSize="17sp"
            android:fontFamily="@font/adamina"
/>
        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#E6FA7A17"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:text="Add to Cart"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#fff"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/adamina"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

</LinearLayout>
</ScrollView>